useCaseDiagram
    actor Менеджер_по_материалам
    actor Производственный_персонал
    actor Складской_работник
    actor Руководитель
    actor Бухгалтерия
    actor Системный_админ
    
    rectangle Система_учета_материалов {
        Менеджер_по_материалам --> (Управление номенклатурой)
        Менеджер_по_материалам --> (Анализ эффективности)
        Менеджер_по_материалам --> (Контроль остатков)
        
        Производственный_персонал --> (Подача заявки)
        Производственный_персонал --> (Отчет о расходе)
        
        Складской_работник --> (Прием материалов)
        Складской_работник --> (Выдача материалов)
        Складской_работник --> (Инвентаризация)
        
        Руководитель --> (Утверждение нормативов)
        Руководитель --> (Просмотр отчетов)
        
        Бухгалтерия --> (Сверка данных)
        Бухгалтерия --> (Фин.отчетность)
        
        Системный_админ --> (Настройка системы)
        Системный_админ --> (Управление доступом)
        
        (Контроль остатков) .> (Формирование заказов) : include
        (Прием материалов) .> (Контроль качества) : include
        (Выдача материалов) .> (Списание по нормам) : include
    }
    
    note right of Менеджер_по_материалам
        Основной пользователь системы,
        отвечает за весь цикл
        управления материалами
    end note
